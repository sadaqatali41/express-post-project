<%- include('partials/header') -%>
<h1>Home</h1>

<p><%= startingContent %></p>

<% posts.forEach(function(post) { %>
    <h1><%= post.title %></h1>
    <% if(post.postBody.length > 100) { %>
        <p>
            <%= post.postBody.substring(0, 100) %>
            <a href="/posts/<%= post.slug %>">... Read more</a>
        </p>
    <% } else { %>
        <p><%= post.postBody %></p>    
    <% } %>
<% }) %>

<%- include('partials/footer') -%>